<?xml version="1.0" encoding="UTF-8"?>
<mediaserver>
	<network>
		<bindAddress>127.0.0.1</bindAddress>
		<externalAddress>127.0.0.1</externalAddress>
		<network>127.0.0.1</network>
		<subnet>255.255.255.255</subnet>
		<sbc>false</sbc>
	</network>

	<controller protocol="mgcp">
		<address>127.0.0.1</address>
		<port>2427</port>
		<channelBuffer>5000</channelBuffer>
		<endpoints>
			<endpoint name="mobicents/bridge/" relay="splitter" />
			<endpoint name="mobicents/ivr/" relay="mixer" />
			<endpoint name="mobicents/cnf/" relay="mixer"/>
		</endpoints>
	</controller>

	<media>
		<timeout>0</timeout>
		<halfOpenDuration>300</halfOpenDuration>
		<maxDuration>14400</maxDuration>
		<lowPort>34534</lowPort>
		<highPort>65534</highPort>
		<jitterBuffer size="50" />
		<codecs>
			<codec name="l16" />
			<codec name="pcmu" />
			<codec name="pcma" />
			<codec name="gsm" />
			<codec name="opus" />
			<codec name="g729" />
			<codec name="telephone-event" />
		</codecs>
	</media>

	<resources>
		<player>
			<cache>
				<cacheSize>100</cacheSize>
				<cacheEnabled>false</cacheEnabled>
			</cache>
			<connectionTimeout>2000</connectionTimeout>
		</player>
		<dtmfDetector dbi="-35" toneDuration="100" toneInterval="400" />
		<dtmfGenerator toneVolume="-20" toneDuration="100" />
	</resources>

	<dtls>
		<minVersion>1.0</minVersion>
		<maxVersion>1.2</maxVersion>
		<cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256,TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256,TLS_ECDHE_ECDSA_WITH_AES_128_CBC_SHA,TLS_ECDHE_ECDSA_WITH_AES_256_CBC_SHA</cipherSuites>
		<certificate path="../conf/dtls/x509-server-ecdsa.pem" key="../conf/dtls/x509-server-key-ecdsa.pem" algorithm="ecdsa"/>
	</dtls>

	<subsystems>
		<subsystem name="asr">
			<!-- ASR Driver Example
			<driver name="driver-name" class="org.restcomm.media.drivers.asr.gcs.somedriver"> 
				<parameter name="hertz">8000</parameter>
				<parameter name="responseTimeout">1000</parameter> 
				<parameter name="interimResults">true</parameter>
			</driver>
			-->
		</subsystem>
	</subsystems>
</mediaserver>
